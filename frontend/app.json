{
  "expo": {
    "name": "frontend",
    "slug": "frontend",
    "version": "1.0.0",
    "assetBundlePatterns": ["assets/*"],
    "orientation": "landscape", // Ensures the app always launches in landscape mode
    "icon": "./assets/icon.png", // Path to your app icon
    "userInterfaceStyle": "light", // Light or dark mode support
    "newArchEnabled": true, // Enable the New Architecture
    "splash": {
      "image": "./assets/favicon.png", // Path to the splash screen image
      "resizeMode": "contain", // Maintain aspect ratio
      "backgroundColor": "#ffffff" // Background color during the splash screen
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png", // Path to the adaptive icon for Android
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png" // Path to the favicon for web
    }
  }
}
